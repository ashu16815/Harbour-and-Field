{% comment %}
  Premium Hero Section for Harbour & Field Menswear
  Features: Large hero banner with lifestyle photography, premium messaging, and CTA
{% endcomment %}

<div class="premium-hero section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="premium-hero__container">
      <div class="premium-hero__content">
        <div class="premium-hero__text-content">
          {% if section.settings.heading != blank %}
            <h1 class="premium-hero__heading h0">
              {{ section.settings.heading | escape }}
            </h1>
          {% endif %}
          
          {% if section.settings.subheading != blank %}
            <p class="premium-hero__subheading">
              {{ section.settings.subheading | escape }}
            </p>
          {% endif %}
          
          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
            <div class="premium-hero__button-wrapper">
              <a href="{{ section.settings.button_link }}" class="button button--primary premium-hero__button">
                {{ section.settings.button_label | escape }}
              </a>
            </div>
          {% endif %}
        </div>
        
        {% if section.settings.image != blank %}
          <div class="premium-hero__image-wrapper">
            <img
              srcset="{%- if section.settings.image.width >= 375 -%}{{ section.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
                {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
                {%- if section.settings.image.width >= 1100 -%}{{ section.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                {%- if section.settings.image.width >= 1780 -%}{{ section.settings.image | image_url: width: 1780 }} 1780w,{%- endif -%}
                {%- if section.settings.image.width >= 2000 -%}{{ section.settings.image | image_url: width: 2000 }} 2000w,{%- endif -%}
                {%- if section.settings.image.width >= 3000 -%}{{ section.settings.image | image_url: width: 3000 }} 3000w,{%- endif -%}
                {%- if section.settings.image.width >= 3840 -%}{{ section.settings.image | image_url: width: 3840 }} 3840w,{%- endif -%}
                {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
              sizes="100vw"
              src="{{ section.settings.image | image_url: width: 1500 }}"
              loading="lazy"
              alt="{{ section.settings.image.alt | escape }}"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
              class="premium-hero__image"
            >
          </div>
        {% else %}
          <div class="premium-hero__image-wrapper">
            <div class="premium-hero__placeholder">
              <svg width="400" height="500" viewBox="0 0 400 500" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect width="400" height="500" fill="#2C3E50" opacity="0.1"/>
                <path d="M200 150C177.909 150 160 167.909 160 190C160 212.091 177.909 230 200 230C222.091 230 240 212.091 240 190C240 167.909 222.091 150 200 150ZM200 220C185.641 220 174 208.359 174 194C174 179.641 185.641 168 200 168C214.359 168 226 179.641 226 194C226 208.359 214.359 220 200 220Z" fill="#2C3E50" opacity="0.3"/>
                <path d="M120 280H280V320H120V280Z" fill="#2C3E50" opacity="0.3"/>
                <path d="M140 340H260V360H140V340Z" fill="#2C3E50" opacity="0.3"/>
                <path d="M160 370H240V390H160V370Z" fill="#2C3E50" opacity="0.3"/>
              </svg>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .premium-hero {
    background: linear-gradient(135deg, var(--color-premium-navy) 0%, var(--color-charcoal-grey) 100%);
    color: var(--color-merino-white);
    padding: 120px 0;
    position: relative;
    overflow: hidden;
  }
  
  .premium-hero__container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    min-height: 600px;
  }
  
  .premium-hero__text-content {
    z-index: 2;
    position: relative;
  }
  
  .premium-hero__heading {
    font-family: var(--font-heading-family);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 400;
    line-height: 1.1;
    margin-bottom: 24px;
    color: var(--color-merino-white);
    letter-spacing: -0.02em;
  }
  
  .premium-hero__subheading {
    font-family: var(--font-body-family);
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 40px;
    color: var(--color-warm-cream);
    max-width: 500px;
  }
  
  .premium-hero__button {
    background: var(--color-gold-accent);
    color: var(--color-text-dark);
    border: none;
    padding: 18px 36px;
    font-size: 1.1rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    border-radius: 0;
  }
  
  .premium-hero__button:hover {
    background: var(--color-merino-white);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
  }
  
  .premium-hero__image-wrapper {
    position: relative;
    z-index: 1;
  }
  
  .premium-hero__image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.3);
  }
  
  @media screen and (max-width: 989px) {
    .premium-hero__container {
      grid-template-columns: 1fr;
      gap: 60px;
      text-align: center;
    }
    
    .premium-hero {
      padding: 80px 0;
    }
    
    .premium-hero__subheading {
      margin-left: auto;
      margin-right: auto;
    }
  }
  
  @media screen and (max-width: 749px) {
    .premium-hero {
      padding: 60px 0;
    }
    
    .premium-hero__container {
      min-height: 400px;
    }
  }
</style>

{% schema %}
{
  "name": "Premium Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Modern Businesswear. Redefined.",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "default": "Premium menswear crafted for the modern professional. Timeless style meets contemporary comfort in every piece.",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Shop the Collection",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    }
  ],
  "presets": [
    {
      "name": "Premium Hero"
    }
  ]
}
{% endschema %}
