{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title"
        },
        "caption": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "price": {
          "type": "price"
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector"
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": false
          }
        },
        "description": {
          "type": "description"
        },
        "materials": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Materials & Construction",
            "icon": "leather",
            "content": "<p>Premium fabrics sourced from Italian mills and New Zealand Merino wool. Expert tailoring ensures perfect fit and durability.</p>",
            "page": ""
          }
        },
        "sizing": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Sizing Guide",
            "icon": "ruler",
            "content": "<p>Our pieces are designed for the modern professional. Refer to our detailed sizing chart for the perfect fit.</p>",
            "page": ""
          }
        },
        "care": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Care Instructions",
            "icon": "heart",
            "content": "<p>Professional dry cleaning recommended. Store on wooden hangers to maintain shape. Avoid direct sunlight.</p>",
            "page": ""
          }
        },
        "shipping": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Shipping & Returns",
            "icon": "truck",
            "content": "<p>Free shipping on orders over $200. 30-day returns. Free alterations available.</p>",
            "page": ""
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Share"
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "caption",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "description",
        "materials",
        "sizing",
        "care",
        "shipping",
        "share"
      ],
      "settings": {
        "enable_sticky_info": true,
        "gallery_layout": "stacked",
        "media_size": "large",
        "constrain_to_viewport": true,
        "mobile_thumbnails": "hide",
        "hide_variants": false,
        "enable_video_looping": false,
        "padding_top": 80,
        "padding_bottom": 80
      }
    },
    "product-benefits": {
      "type": "multicolumn",
      "blocks": {
        "shipping": {
          "type": "column",
          "settings": {
            "title": "Free Shipping",
            "text": "<p>Free shipping on orders over $200. Express shipping available.</p>",
            "link_label": "",
            "link": ""
          }
        },
        "returns": {
          "type": "column",
          "settings": {
            "title": "30-Day Returns",
            "text": "<p>Not satisfied? Return within 30 days for a full refund.</p>",
            "link_label": "",
            "link": ""
          }
        },
        "alterations": {
          "type": "column",
          "settings": {
            "title": "Free Alterations",
            "text": "<p>Free alterations to ensure your perfect fit.</p>",
            "link_label": "",
            "link": ""
          }
        },
        "quality": {
          "type": "column",
          "settings": {
            "title": "Premium Quality",
            "text": "<p>Italian fabrics, NZ Merino wool, expert craftsmanship.</p>",
            "link_label": "",
            "link": ""
          }
        }
      },
      "block_order": [
        "shipping",
        "returns",
        "alterations",
        "quality"
      ],
      "settings": {
        "title": "",
        "heading_size": "h3",
        "image_width": "full",
        "image_ratio": "adapt",
        "columns_desktop": 4,
        "column_alignment": "center",
        "background_style": "none",
        "button_label": "",
        "button_link": "",
        "swipe_on_mobile": false,
        "color_scheme": "scheme-1",
        "columns_mobile": "2",
        "padding_top": 80,
        "padding_bottom": 80
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "Complete Your Look",
        "heading_size": "h2",
        "columns_desktop": 4,
        "color_scheme": "scheme-1",
        "image_ratio": "square",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 80,
        "padding_bottom": 80
      }
    }
  },
  "order": [
    "main",
    "product-benefits",
    "related-products"
  ]
}
