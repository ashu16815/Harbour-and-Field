[
  {
    "name": "theme_info",
    "theme_name": "Harbour & Field Premium",
    "theme_version": "1.0.0",
    "theme_author": "Harbour & Field",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:settings_schema.logo.name",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "t:settings_schema.logo.settings.logo_image.label"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 100,
        "unit": "px",
        "label": "t:settings_schema.logo.settings.logo_width.label"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "t:settings_schema.logo.settings.favicon.label",
        "info": "t:settings_schema.logo.settings.favicon.info"
      }
    ]
  },
  {
    "name": "t:settings_schema.colors.name",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "t:settings_schema.colors.settings.background.label",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background",
            "id": "background_gradient",
            "label": "t:settings_schema.colors.settings.background_gradient.label",
            "info": "t:settings_schema.colors.settings.background_gradient.info"
          },
          {
            "type": "color",
            "id": "text",
            "label": "t:settings_schema.colors.settings.text.label",
            "default": "#1A1A1A"
          },
          {
            "type": "color",
            "id": "button",
            "label": "t:settings_schema.colors.settings.button_background.label",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "t:settings_schema.colors.settings.button_label.label",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "t:settings_schema.colors.settings.secondary_button_label.label",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "shadow",
            "label": "t:settings_schema.colors.settings.shadow.label",
            "default": "#000000"
          }
        ],
        "role": {
          "text": "text",
          "background": {
            "solid": "background",
            "gradient": "background_gradient"
          },
          "links": "secondary_button_label",
          "icons": "text",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "background",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "secondary_button_label"
        }
      }
    ]
  },
  {
    "name": "Premium E-commerce Colors",
    "settings": [
      {
        "type": "header",
        "content": "Brand Color Palette"
      },
      {
        "type": "color",
        "id": "premium_black",
        "label": "Premium Black",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "premium_white",
        "label": "Premium White",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "charcoal_grey",
        "label": "Charcoal Grey",
        "default": "#1A1A1A"
      },
      {
        "type": "color",
        "id": "light_grey",
        "label": "Light Grey",
        "default": "#F8F8F8"
      },
      {
        "type": "color",
        "id": "medium_grey",
        "label": "Medium Grey",
        "default": "#E5E5E5"
      },
      {
        "type": "color",
        "id": "dark_grey",
        "label": "Dark Grey",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "accent_gold",
        "label": "Accent Gold",
        "default": "#D4AF37"
      }
    ]
  },
  {
    "name": "t:settings_schema.typography.name",
    "settings": [
      {
        "type": "header",
        "content": "t:settings_schema.typography.settings.header__1.content"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "inter_n4",
        "label": "t:settings_schema.typography.settings.type_header_font.label"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "t:settings_schema.typography.settings.heading_scale.label",
        "default": 100
      },
      {
        "type": "header",
        "content": "t:settings_schema.typography.settings.header__2.content"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "inter_n4",
        "label": "t:settings_schema.typography.settings.type_body_font.label"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "t:settings_schema.typography.settings.body_scale.label",
        "default": 100
      }
    ]
  },
  {
    "name": "t:settings_schema.layout.name",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "default": 1200,
        "unit": "px",
        "label": "t:settings_schema.layout.settings.page_width.label"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:settings_schema.layout.settings.spacing_sections.label",
        "default": 0
      },
      {
        "type": "header",
        "content": "t:settings_schema.layout.settings.header__grid.content"
      },
      {
        "type": "paragraph",
        "content": "t:settings_schema.layout.settings.paragraph__grid.content"
      },
      {
        "type": "range",
        "id": "spacing_grid_horizontal",
        "min": 4,
        "max": 40,
        "step": 4,
        "default": 8,
        "unit": "px",
        "label": "t:settings_schema.layout.settings.spacing_grid_horizontal.label"
      },
      {
        "type": "range",
        "id": "spacing_grid_vertical",
        "min": 4,
        "max": 40,
        "step": 4,
        "default": 8,
        "unit": "px",
        "label": "t:settings_schema.layout.settings.spacing_grid_vertical.label"
      }
    ]
  },
  {
    "name": "E-commerce Features",
    "settings": [
      {
        "type": "header",
        "content": "Product Display"
      },
      {
        "type": "checkbox",
        "id": "show_quick_shop",
        "default": true,
        "label": "Show Quick Shop overlay on product hover"
      },
      {
        "type": "checkbox",
        "id": "show_wishlist",
        "default": true,
        "label": "Show wishlist button on products"
      },
      {
        "type": "checkbox",
        "id": "show_product_ratings",
        "default": true,
        "label": "Show product ratings"
      },
      {
        "type": "header",
        "content": "Navigation"
      },
      {
        "type": "checkbox",
        "id": "show_search_bar",
        "default": true,
        "label": "Show search bar in navigation"
      },
      {
        "type": "checkbox",
        "id": "show_cart_count",
        "default": true,
        "label": "Show cart item count"
      },
      {
        "type": "header",
        "content": "Checkout"
      },
      {
        "type": "checkbox",
        "id": "show_shipping_info",
        "default": true,
        "label": "Show shipping information"
      },
      {
        "type": "checkbox",
        "id": "show_size_guide",
        "default": true,
        "label": "Show size guide on product pages"
      }
    ]
  }
]
